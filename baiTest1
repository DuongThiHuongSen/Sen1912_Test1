	<script>
		window.onload = dots();
		function dots() {
			var dots = document.getElementsByClassName("dots")[0];
			for (var i = 0; i < 4; i++) {
				var label = document.createElement("label");
				label.setAttribute("class", "dot");
				dots.appendChild(label);
			}
			var dot0 = document.getElementsByClassName("dot")[0];
			dot0.style.backgroundColor = "#05fd3b";
		}

		function kiem_Tra() {
			$("#button_dangNhap div").addClass("loader");
			$("#button_dangNhap input").val(' ');
			setTimeout(() => {
				$("#button_dangNhap input").val('Đăng nhập');
				$("#button_dangNhap div").removeClass("loader");
			}, 2000);
			var email = document.forms[0].email;
			var regux = "^\\w+[a-z0-9]*@\\w+.[a-z]{2,3}$";
			var pass = document.forms[0].password;
			if (email.value == "") {
				email.focus();
				email.style.outlineStyle = "solid";
				email.style.outlineColor = "red";
				email.style.outlineWidth = "thin";
				return false;
			}
			if (email.value.match(regux) == null) {
				email.style.outlineStyle = "solid";
				email.style.outlineColor = "red";
				email.style.outlineWidth = "thin";
				return false;
			} else if (email.value.match(regux) != null) {
				email.style.outlineStyle = "solid";
				email.style.outlineColor = "green";
				email.style.outlineWidth = "thin";
				if (pass.value == "") {
					var mk = document.getElementById("show_hide_password");
					mk.focus();
					mk.style.outlineStyle = "solid";
					mk.style.outlineColor = "red";
					mk.style.outlineWidth = "thin";
					return false;
				} else {
					return true;
				}
			}

		}
		$(document).ready(function () {
			$("#show_hide_password a").on('click', function (event) {
				event.preventDefault();
				if ($('#show_hide_password input').attr("type") == "text") {
					$('#show_hide_password input').attr('type', 'password');
					$('#show_hide_password i').addClass("fa-eye-slash");
					$('#show_hide_password i').removeClass("fa-eye");
				}
				else if ($('#show_hide_password input').attr("type") == "password") {
					$('#show_hide_password input').attr('type', 'text');
					$('#show_hide_password i').removeClass("fa-eye-slash");
					$('#show_hide_password i').addClass("fa-eye");
				}
			});
		});


		var slide = document.getElementsByClassName("slide");
		var chuyenslide = document.getElementsByClassName("content")[0];
		var Kichthuoc = slide[0].clientWidth;
		var mgSlideLeft = 0;
		var mgMax = Kichthuoc * 4;
		var dot = document.getElementsByClassName("dot");
		var i = 0;
		function next() {
			if (mgSlideLeft < mgMax - Kichthuoc) {
				i++
				mgSlideLeft += Kichthuoc;

			} else {
				mgSlideLeft = 0;
				i = 0;
			}
			chuyenslide.style.marginLeft = "-" + mgSlideLeft + "px";
			for (var j = 0; j < 4; j++) {
					if (j == i) {
						dot[j].style.backgroundColor = "#05fd3b";
					} else {
						dot[j].style.backgroundColor = "#ffffff";
					}
				}
		}
		function back() {
			if (mgSlideLeft == 0) {
				mgSlideLeft = mgMax;
				i = 5;
			}
			i--;
			mgSlideLeft -= Kichthuoc;
			chuyenslide.style.marginLeft = "-" + mgSlideLeft + "px";
		}
		setInterval(next, 3000);


	</script>
