<body class="margin-0">
	<div class="container">
		<div class="form">
			<div class="overplay-form">
				<img src="logo.png" class="logo" />
				<p class="title-form">ONE GOLF PARTNER ACADEMY</p>
				<div class="form-content">
					<form onsubmit="return kiem_Tra();">
						<input type="text" placeholder="Email" name="email" class="nhap" />
						<div class="nhap" id="show_hide_password">
							<input type="password" placeholder="Mật khẩu" name="password" class="nhapPass"
								id="password" />
							<a href="" class="eye"><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
						</div>
						<!-- Check và UnCheck -->
						<div class="checkbox">
							<input type="checkbox" id="checkbox" name="" value="">
							<label for="checkbox"><span>Giữ đăng nhập?</span></label>
						</div>

						<!-- Tạo nút đăng nhập loader trong 2s -->
						<div id="button_dangNhap">
							<div></div>
							<input type="submit" value="ĐĂNG NHẬP" class="Dangnhap" id="dangNhap" />
						</div>

						<p style="text-align: center;">Quên mật khẩu? <a href="#">Nhận lại</a></p>
						<div class="ho_Tro"><a href="">Hỗ trợ</a></div>
					</form>
